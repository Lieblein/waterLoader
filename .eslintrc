{
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "webpack.config.js"
            }
        }
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": "airbnb",
    "env": {
    },
    "globals": {
        "navigator": true,
        "document": true,
        "window": true,

        "jest": true,
        "describe": true,
        "test": true,
        "beforeAll": true,
        "beforeEach": true,
        "afterAll": true,
        "afterEach": true,
        "expect": true,
        "shallow": true,
        "render": true,
        "mount": true,
        "ReactWrapper": true
    },
    "rules": {
        "react/no-did-mount-set-state": 0,
        "react/sort-comp": 0,
        "react/no-find-dom-node": 0,
        "react/no-render-return-value": 0,
        "react/jsx-curly-spacing": [
            2,
            "always",
            {
                "spacing": {
                    "objectLiterals": "never"
                }
            }
        ],
        "camelcase": 0,
        "react/jsx-wrap-multilines": 0,
        "import/prefer-default-export": 0,
        "import/no-named-as-default": 0,
        "linebreak-style": 0,
        "react/no-array-index-key": 0,
        "react/forbid-prop-types": [
            2,
            {
                "forbid": [
                    "object"
                ]
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "prefer-const": 0,
        "comma-dangle": [
            "error",
            "never"
        ],
        "func-names": 0,
        "default-case": 0,
        "prefer-template": 0,
        "no-param-reassign": 0,
        "no-nested-ternary": 0,
        "prefer-rest-params": 0,
        "no-unused-expressions": 0,
        "no-extend-native": 0,
        "no-return-assign": 0,
        "no-confusing-arrow": 0,
        "no-plusplus": 0,
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "no-shadow": 0,
        "max-len": [
            "error",
            120,
            4,
            {
                "ignoreComments": true
            }
        ],
        "prefer-arrow-callback": 0,
        "react/prefer-stateless-function": 0,
        "react/react-in-jsx-scope": 0,
        "react/jsx-indent-props": [
            2,
            4
        ],
        "react/jsx-indent": [
            2,
            4
        ],
        "react/jsx-boolean-value": [
            "error",
            "always"
        ],
        "valid-jsdoc": [
            "error",
            {
                "requireReturn": false,
                "requireReturnDescription": false
            }
        ]
    }
}
